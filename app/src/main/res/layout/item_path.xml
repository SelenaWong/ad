<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
     <TextView 
        android:id="@+id/item_path_name"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:text=""
        android:gravity="center_vertical"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/txtSize_title_medium"/>
      <TextView
        android:id="@+id/item_path_txt" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/txtSize_title_medium"
        android:singleLine="true"
        android:background="@drawable/edittext_normal"/>
      <TextView
	   android:id="@+id/item_path_edit" 
	   android:layout_width="50dp"
	   android:layout_height="match_parent"
	   android:gravity="center_vertical"
	   android:textColor="@color/text_gray"
	   android:textSize="@dimen/txtSize_content_small"
	   android:drawableStart="@drawable/configurate_edit"/>
</LinearLayout>

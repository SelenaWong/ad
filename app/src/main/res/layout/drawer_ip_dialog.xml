<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_drawer_ip_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:orientation="vertical" 
    android:background="@null"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@drawable/alertdialog_title_bg">
       <TextView
        android:id="@+id/tv_ipdialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:text="IP地址"
        android:textSize="@dimen/dialog_title_size"	
        android:textColor="@color/dialog_text"/>
     </RelativeLayout>
     <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/alertdialog_middle_bg"
       android:paddingLeft="10dip"
       android:paddingRight="10dip"
       android:paddingTop="20dip"
       android:paddingBottom="20dip"
       >
	      <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal"
	       android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
	      >
	       <TextView
	         android:id="@+id/tv_ipdialog_inforhint"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text=""
			 android:textSize="@dimen/dialog_content_size"	
			 android:textColor="@color/dialog_text"/>
	       <TextView
	         android:id="@+id/tv_ipdialog_infor"
	         android:layout_width="0dip"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
			 android:singleLine="false"			 
			 android:textSize="@dimen/dialog_content_size"	
			 android:textColor="@color/dialog_text"/>
	       </LinearLayout>
       </LinearLayout>
      <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="65dip"
       android:paddingTop="10dip"
       android:paddingBottom="10dip"   
       android:background="@drawable/alertdialog_bottom_bg"
       android:orientation="horizontal"
       android:gravity="center"
      >

      <Button
 	     android:id="@+id/rb_ipdialog_confirm"
 	     android:layout_width="wrap_content"
 	     android:layout_height="wrap_content"	
 	     android:layout_marginLeft="10dip"
 	     android:gravity="center"
 	     android:text="@string/confirm"
 	     android:textSize="@dimen/dialog_content_size"	          
 	     android:button="@null"
 	     android:checked="true"
 	     android:textColor="@color/white"
 	     android:background="@drawable/confirmbtn_selector"/>
    
     </LinearLayout>    
</LinearLayout>
